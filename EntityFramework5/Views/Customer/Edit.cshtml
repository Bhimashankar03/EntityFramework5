@model Customer

<form method="post" asp-action="Edit" asp-controller="Customer">
	<input type="hidden" asp-for="Sno" />
	<label asp-for="@Model.Name"></label>
		<input type="text" asp-for="Name" class="form-control" />
		<span asp-validation-for="@Model.Name" class="text-danger"></span>
		<br />
	<label asp-for="@Model.Email"></label>
		<input type="text" asp-for="Email" class="form-control" />
	<span asp-validation-for="@Model.Email" class="text-danger"></span>
	<br />
	<label asp-for="@Model.MobNo"></label>
		<input type="text" asp-for="MobNo" class="form-control" />
	<span asp-validation-for="@Model.MobNo" class="text-danger"></span>
	<br />
	<label asp-for="@Model.Address"></label>
	<input type="text" asp-for="Address" class="form-control" />

	<button class="btn btn-primary">Submit</button>
</form>